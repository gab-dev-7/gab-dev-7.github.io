---
import Layout from "@/layouts/Layout.astro";
import Projects from "@/components/sections/Projects.astro";
import Experience from "@/components/sections/Experience.astro";
import Education from "@/components/sections/Education.astro";
import { basics } from "@cv";
import { Icon } from "astro-icon/components";

const { name, label, summary, image, profiles } = basics;
---

<Layout title={`${name} - ${label}`}>
  <div class="container">
    <header>
      <img src={image} alt={name} class="profile-picture" />
      <h1>{name}</h1>
      <p class="subtitle">{label}</p>
      <nav>
        <div class="icon-row">
          <a href={profiles.find(p => p.network === 'GitHub')?.url} class="btn icon-btn" target="_blank" rel="noopener noreferrer">
            <Icon name="github" />
          </a>
          <a href={profiles.find(p => p.network === 'LinkedIn')?.url} class="btn icon-btn" target="_blank" rel="noopener noreferrer">
            <Icon name="linkedin" />
          </a>
          <a href="/neovim" class="btn icon-btn" title="Neovim Mode">
            <Icon name="simple-icons:neovim" />
          </a>
        </div>
        <div class="text-row">
          <a href="/blog" class="btn">Blog</a>
          <a href="/contact" class="btn">Contact</a>
          <a href="https://github.com/gab-dev-7/gab-dev-7.github.io" class="btn">Source</a>
          <a href="/cv.pdf" class="btn" download>CV</a>
        </div>
      </nav>
    </header>

    <main>
      <section id="about">
        <h2>About</h2>
        <p>{summary}</p>
      </section>

      <section id="projects">
        <h2>Projects</h2>
        <Projects />
      </section>

      <section id="experience">
        <h2>Experience</h2>
        <Experience />
      </section>

      <section id="education">
        <h2>Education</h2>
        <Education />
      </section>
    </main>
  </div>
</Layout>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid #1e293b;
    position: relative;
    overflow: hidden;
  }

  header::before {
    content: '';
    position: absolute;
    top: -50%;
    left: 50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(ellipse at center, rgba(0, 240, 255, 0.1), transparent 70%);
    transform: translateX(-50%);
    z-index: -1;
  }

  .profile-picture {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 3px solid var(--accent-pink);
    margin: 0 auto 1.5rem;
    display: block;
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    background: linear-gradient(to right, var(--accent-cyan), var(--accent-pink));
    -webkit-background-clip: text;
    color: transparent;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
    font-size: 1.25rem;
    font-family: var(--font-mono);
  }

  h2 {
    color: var(--accent-pink);
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  section {
    margin-bottom: 4rem;
  }

  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .icon-row,
  .text-row {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    background: var(--accent-pink);
    color: white;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 0 15px rgba(255, 0, 85, 0.4);
  }

  .btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 25px rgba(255, 0, 85, 0.8);
  }

  .icon-btn {
    padding: 0.5rem;
    width: 40px;
    height: 40px;
  }

  .icon-btn :global(svg) {
    width: 24px;
    height: 24px;
  }
</style>
